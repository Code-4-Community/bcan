{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "commonjs",
      "target": "es2017",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }