{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "entryFile": "backend/src/main.js",
    "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts", ".types.ts"]
        }
      }
    ]
  }
}